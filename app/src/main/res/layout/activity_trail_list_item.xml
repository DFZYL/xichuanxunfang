<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="模式：网络"
        android:textColor="#000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_time"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-12-22 12:22:32"
        android:textColor="#000"
        android:textSize="14sp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/text_latitude"
        android:layout_below="@+id/text_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="纬度：34.75049"
        android:layout_marginTop="8dp"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/text_longitude"
        android:layout_below="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="经度：117.75049"
        android:layout_alignLeft="@+id/text_time"
        android:layout_marginTop="8dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_speed"
        android:layout_below="@+id/text_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="速度：100km/h"
        android:layout_marginTop="4dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_accuracy"
        android:layout_toRightOf="@id/text_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(精度)"

        android:textSize="14sp" />

    <TextView
        android:id="@+id/list_haiba"
        android:layout_marginTop="4dp"
        android:layout_below="@id/text_longitude"
        android:layout_alignLeft="@id/text_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="海拔：1000米"

        android:textSize="14sp" />


</RelativeLayout>